{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Go Server",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/api/main.go",
      "console": "integratedTerminal",
      "output": "${workspaceFolder}/.debug/debug_bin"
    },
    {
      "name": "Run Next.js Dev",
      "type": "node-terminal",
      "request": "launch",
      "cwd": "${workspaceFolder}/web",
      "command": "pnpm dev"
    }
  ],
  "compounds": [
    {
      "name": "Debug Backend + Run Frontend",
      "configurations": ["Debug Go Server", "Run Next.js Dev"]
    }
  ]
}
