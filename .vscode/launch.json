{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Go API",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/api/main.go",
      "console": "integratedTerminal",
      "output": "${workspaceFolder}/.debug/debug_bin"
    },
    {
      "name": "Run Next.js Web Server",
      "type": "node-terminal",
      "request": "launch",
      "cwd": "${workspaceFolder}/web",
      "command": "pnpm dev"
    },
    {
      "name": "Start Postgres Docker Container",
      "type": "node-terminal",
      "request": "launch",
      "command": "docker start policy-link",
      "postDebugTask": "docker-stop"
    },
    {
      "name": "Launch Firefox",
      "type": "firefox",
      "request": "launch",
      "url": "https://localhost:3000",
      "webRoot": "${workspaceFolder}/client"
    },
  ],
  "compounds": [
    {
      "name": "Debug Backend + Run Frontend",
      "configurations": [
        "Start Postgres Docker Container",
        "Run Next.js Web Server",
        "Debug Go API",
      ]
    }
  ],
}
