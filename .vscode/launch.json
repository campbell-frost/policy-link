{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Go Server",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/api/main.go",
      "console": "integratedTerminal",
      "output": "${workspaceFolder}/.debug/debug_bin"
    },
    {
      "name": "Launch Next.js",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/web",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["dev"],
      "console": "integratedTerminal"
    }
  ],
  "compounds": [
    {
      "name": "Full Stack: Backend + Frontend",
      "configurations": ["Launch Go Server", "Launch Next.js"]
    }
  ]
}
